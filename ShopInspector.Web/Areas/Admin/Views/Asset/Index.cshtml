@model IEnumerable<ShopInspector.Core.Entities.Asset>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Asset";
}

<div class="asset-page">
    <!-- Header row: title left, add button right (same line) -->
    <div class="asset-header-row">
        <h2 class="asset-title">Assets</h2>
        <a asp-area="Admin"
           asp-controller="Asset"
           asp-action="Create"
           class="btn btn-primary asset-add-btn"
           title="Add Asset">
            <i class="bi bi-plus-circle"></i> <span>Add Asset</span>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="asset-table-wrapper mt-3">
        <table class="table table-hover table-compact asset-table">
            <thead>
                <tr>
                    <th data-hide-sm>Code</th>
                    <th>Asset</th>
                    <th data-hide-sm>Type</th>
                    <th data-hide-md>Location</th>
                    <th data-hide-md>Active</th>
                    <th class="asset-col-qr">QR</th>
                    <th class="asset-col-actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var a in Model)
                    {
                        <tr>
                            <td class="text-nowrap" data-hide-sm>@a.AssetCode</td>
                            <td>@a.AssetName</td>
                            <td data-hide-sm>@a.AssetType?.AssetTypeName</td>
                            <td data-hide-md>@a.AssetLocation</td>
                            <td data-hide-md>
                                @if (a.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="asset-col-qr">
                                <button type="button"
                                        data-action="generate-qr"
                                        data-url="@Url.Action("GenerateQr", "Asset", new { area = "Admin", id = a.AssetID })"
                                        class="btn btn-outline-info btn-square btn-sm"
                                        title="Generate QR">
                                    <i class="bi bi-qr-code"></i>
                                </button>
                            </td>
                            <td class="asset-col-actions">
                                <div class="asset-action-group">
                                    <a asp-controller="PublicInspection" asp-action="Start" asp-route-assetId="@a.AssetID"
                                       class="btn btn-action btn-outline-success" title="Inspect">
                                        <i class="bi bi-play-circle"></i> <span class="txt">Inspect</span>
                                    </a>
                                    <a asp-controller="PublicInspection" asp-action="History" asp-route-assetId="@a.AssetID"
                                       class="btn btn-action btn-outline-secondary" title="History">
                                        <i class="bi bi-clock-history"></i> <span class="txt">History</span>
                                    </a>
                                    <a asp-area="Admin" asp-controller="Asset" asp-action="Edit" asp-route-id="@a.AssetID"
                                       class="btn btn-action btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil-square"></i> <span class="txt">Edit</span>
                                    </a>
                                    <form asp-area="Admin"
                                          asp-controller="Asset"
                                          asp-action="Delete"
                                          asp-route-id="@a.AssetID"
                                          method="post"
                                          class="m-0 p-0 d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-action btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i> <span class="txt">Delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <i class="bi bi-inbox"></i><br />
                            No assets found. <a asp-area="Admin" asp-controller="Asset" asp-action="Create">Create your first asset</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>