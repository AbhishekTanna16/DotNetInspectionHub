@model IEnumerable<ShopInspector.Core.Entities.Asset>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Asset";
}

<div class="admin-container">
    @* Display success/error messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="admin-toolbar">
        <h2 class="mb-0">Assets</h2>
        <div class="d-flex justify-content-end mb-4">
            <a asp-area="Admin" asp-controller="Asset" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Asset
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-compact">
            <thead class="table-light">
                <tr>
                    <th>Code</th>
                    <th>Asset</th>
                    <th data-hide-sm>Type</th>
                    <th data-hide-md>Location</th>
                    <th data-hide-md>Active </th>
                    <th>Generated QR</th>
                    <th class="actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var a in Model)
                    {
                        <tr>
                            <td class="text-nowrap">@a.AssetCode</td>
                            <td>@a.AssetName</td>
                            <td data-hide-sm>@a.AssetType?.AssetTypeName</td>
                            <td data-hide-md>@a.AssetLocation</td>
                            <td>
                                @if (a.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <button type="button"
                                        data-action="generate-qr"
                                        data-url="@Url.Action("GenerateQr", "Asset", new { area = "Admin", id = a.AssetID })"
                                        class="btn btn-sm btn-outline-info me-1"
                                        title="Generate QR">
                                    <i class="bi bi-qr-code"></i>
                                </button>
                            </td>

                            <td class="actions action-button text-end">

                                <a asp-controller="PublicInspection" asp-action="Start" asp-route-assetId="@a.AssetID"
                                       class="btn btn-sm btn-outline-success me-3" title="Start Inspection">
                                        <i class="bi bi-play-circle"></i> Inspect
                                    </a>


                                <a asp-controller="PublicInspection" asp-action="History" asp-route-assetId="@a.AssetID"
                                       class="btn btn-sm btn-outline-secondary me-3" title="Inspection History">
                                        <i class="bi bi-clock-history"></i> History
                                    </a>

                                <a asp-area="Admin" asp-controller="Asset" asp-action="Edit" asp-route-id="@a.AssetID" class="btn btn-sm btn-outline-primary me-3">Edit</a>

                                <form asp-area="Admin" asp-controller="Asset" asp-action="Delete" asp-route-id="@a.AssetID" method="post" class="d-inline js-ajax-delete">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <i class="bi bi-inbox"></i><br>
                            No assets found. <a asp-area="Admin" asp-controller="Asset" asp-action="Create">Create your first asset</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
