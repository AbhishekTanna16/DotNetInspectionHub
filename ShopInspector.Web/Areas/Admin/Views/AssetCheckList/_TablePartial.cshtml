@using ShopInspector.Core.Entities
@model PaginatedList<ShopInspector.Core.Entities.AssetCheckList>

<div class="asset-table-wrapper">
    <!-- Desktop Table View -->
    <div class="d-none d-md-block">
        <table class="table table-hover table-compact asset-table">
            <thead>
                <tr>
                    <th>Asset</th>
                    <th>Checklist</th>
                    <th>Order</th>
                    <th>Active</th>
                    <th class="asset-col-actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model.OrderBy(x => x.Asset?.AssetName).ThenBy(x => x.DisplayOrder))
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.Asset?.AssetName</div>
                                <small class="text-muted">@item.Asset?.AssetCode</small>
                            </td>
                            <td>@item.InspectionCheckList?.InspectionCheckListName</td>
                            <td class="text-center">@item.DisplayOrder</td>
                            <td class="text-center">
                                @if (item.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="asset-col-actions">
                                <div class="asset-action-group">
                                    <a asp-area="Admin" asp-controller="AssetCheckList" asp-action="Edit" asp-route-id="@item.AssetCheckListID" 
                                       class="btn btn-action btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil-square"></i> <span class="txt">Edit</span>
                                    </a>
                                    <form asp-area="Admin"
                                          asp-controller="AssetCheckList"
                                          asp-action="Delete"
                                          asp-route-id="@item.AssetCheckListID"
                                          method="post"
                                          class="m-0 p-0 d-inline delete-form"
                                          data-confirm="Are you sure you want to delete this asset checklist?">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-action btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i> <span class="txt">Delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 2rem; opacity: 0.5;"></i>
                            <br>No asset checklists found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile Card View -->
    <div class="d-md-none">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model.OrderBy(x => x.Asset?.AssetName).ThenBy(x => x.DisplayOrder))
            {
                <div class="asset-card mb-3">
                    <div class="asset-card-header">
                        <div class="asset-card-title">
                            <h6 class="mb-1 fw-bold text-primary">@(item.Asset?.AssetName ?? "Unknown Asset")</h6>
                            <div class="asset-card-meta">
                                <span class="badge bg-light text-dark me-2">@(item.Asset?.AssetCode ?? "No Code")</span>
                                @if (item.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="asset-card-body">
                        <div class="asset-card-details">
                            <div class="detail-row">
                                <span class="detail-label"><i class="bi bi-check-square text-muted me-1"></i>Checklist:</span>
                                <span class="detail-value">@(item.InspectionCheckList?.InspectionCheckListName ?? "N/A")</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label"><i class="bi bi-sort-numeric-up text-muted me-1"></i>Display Order:</span>
                                <span class="detail-value">@item.DisplayOrder</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="asset-card-actions">
                        <div class="mobile-action-grid">
                            <a asp-area="Admin" asp-controller="AssetCheckList" asp-action="Edit" asp-route-id="@item.AssetCheckListID"
                               class="btn btn-outline-primary btn-sm mobile-action-btn">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-area="Admin"
                                  asp-controller="AssetCheckList"
                                  asp-action="Delete"
                                  asp-route-id="@item.AssetCheckListID"
                                  method="post"
                                  class="mobile-action-form delete-form"
                                  data-confirm="Are you sure you want to delete this asset checklist?">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm mobile-action-btn w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.5;"></i>
                <div class="mt-3">
                    <h6>No asset checklists found</h6>
                    <p class="small">Asset checklists will appear here once you assign checklists to your assets.</p>
                </div>
            </div>
        }
        
        <!-- Mobile info notice -->
        <div class="mobile-info-notice mt-3 p-3 bg-light border rounded">
            <small class="text-muted">
                <i class="bi bi-info-circle me-1"></i>
                All asset checklist information is displayed in card format for better mobile viewing.
            </small>
        </div>
    </div>

    @await Html.PartialAsync("_Pagination", Model)
</div>