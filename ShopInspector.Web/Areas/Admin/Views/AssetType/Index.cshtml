
@model IEnumerable<ShopInspector.Core.Entities.AssetType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Asset Type";
}

<div class="admin-container">
    <div class="admin-toolbar">
        <h2 class="mb-0">Asset Types</h2>
        <div class="d-flex justify-content-end mb-4">
            <a asp-area="Admin" asp-controller="AssetType" asp-action="Create" class="btn btn-primary">Add Asset Type</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-compact">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th class="actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.AssetTypeName</td>
                            <td class="actions action-button text-end">
                                <a asp-area="Admin" asp-controller="AssetType" asp-action="Edit" asp-route-id="@t.AssetTypeID" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                <form asp-area="Admin" asp-controller="AssetType" asp-action="Delete" asp-route-id="@t.AssetTypeID" method="post" class="d-inline js-ajax-delete">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
