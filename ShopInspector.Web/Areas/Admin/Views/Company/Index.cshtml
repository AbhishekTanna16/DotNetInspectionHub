@model IEnumerable<ShopInspector.Core.Entities.Company>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Companies";
}

<div class="asset-page">
    <!-- Header row: title left, add button right (same line) -->
    <div class="asset-header-row">
        <h2 class="asset-title">Companies</h2>
        <a asp-area="Admin"
           asp-controller="Company"
           asp-action="Create"
           class="btn btn-primary asset-add-btn"
           title="Add Company">
            <i class="bi bi-plus-circle"></i> <span>Add Company</span>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="asset-table-wrapper mt-3">
        <table class="table table-hover table-compact asset-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th data-hide-sm>Email</th>
                    <th data-hide-md>Contact</th>
                    <th class="text-center">Active</th>
                    <th class="asset-col-actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-truncate-2">@item.CompanyName</td>
                            <td data-hide-sm class="text-truncate-2">@item.CompanyAdminEmail</td>
                            <td data-hide-md class="text-truncate-2">@item.CompanyContactName</td>
                            <td class="text-center">
                                @if (item.Active)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Inactive</span>
                                }
                            </td>
                            <td class="asset-col-actions">
                                <div class="asset-action-group">
                                    <a asp-area="Admin" asp-controller="Company" asp-action="Edit" asp-route-id="@item.CompanyID" 
                                       class="btn btn-action btn-outline-primary" title="Edit Company">
                                        <i class="bi bi-pencil-square"></i> <span class="txt">Edit</span>
                                    </a>
                                    <button type="button" 
                                            data-action="delete" 
                                            data-url="@Url.Action("Delete", "Company", new { area = "Admin", id = item.CompanyID })" 
                                            class="btn btn-action btn-outline-danger" 
                                            title="Delete Company">
                                        <i class="bi bi-trash"></i> <span class="txt">Delete</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-inbox"></i><br />
                            No companies found. <a asp-area="Admin" asp-controller="Company" asp-action="Create">Create your first company</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
