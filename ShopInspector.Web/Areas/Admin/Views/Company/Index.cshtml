@using ShopInspector.Core.Entities
@using ShopInspector.Web.Areas.Admin.Models
@model PaginatedList<CompanyListViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Companies";
}

<div class="asset-page">
    <!-- Header row: title left, add button right (same line) -->
    <div class="asset-header-row">
        <h2 class="asset-title">Companies</h2>
        <a asp-area="Admin"
           asp-controller="Company"
           asp-action="Create"
           class="btn btn-primary asset-add-btn"
           title="Add Company">
            <i class="bi bi-plus-circle"></i> <span>Add Company</span>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Section -->
    <div class="search-section">
        <div class="search-wrapper">
            <div class="search-input-group">
                <i class="bi bi-search search-icon"></i>
                <input type="text" 
                       id="searchInput" 
                       class="search-input" 
                       placeholder="Search by company name or description..." 
                       value="@ViewData["SearchTerm"]"
                       autocomplete="off">
                <button type="button" class="clear-search-btn" id="clearSearch">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="search-info">
                <i class="bi bi-info-circle"></i>
                <span id="searchResults">
                    @if (Model?.TotalCount > 0)
                    {
                        <span class="search-results-count">@Model.TotalCount</span>
                        <span> compan@(Model.TotalCount == 1 ? "y" : "ies") found</span>
                    }
                    else
                    {
                        <span>No companies found</span>
                    }
                </span>
            </div>
        </div>
    </div>

    <!-- Table Container -->
    <div id="tableContainer" class="mt-3">
        @await Html.PartialAsync("_TablePartial", Model)
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-actions.js"></script>
    <script>
        let currentPageSize = 5; // Set to match controller
        let currentSearchTerm = '@ViewData["SearchTerm"]';
        let searchTimeout;

        // Search functionality
        $(document).ready(function() {
            const searchInput = $('#searchInput');
            const clearButton = $('#clearSearch');

            // Handle search input with debouncing
            searchInput.on('input', function() {
                clearTimeout(searchTimeout);
                const searchTerm = $(this).val();
                
                // Show/hide clear button
                if (searchTerm.length > 0) {
                    clearButton.show();
                } else {
                    clearButton.hide();
                }

                // Debounce search to avoid too many requests
                searchTimeout = setTimeout(function() {
                    performSearch(searchTerm);
                }, 500);
            });

            // Handle Enter key
            searchInput.on('keypress', function(e) {
                if (e.which === 13) { // Enter key
                    clearTimeout(searchTimeout);
                    performSearch($(this).val());
                }
            });

            // Clear search
            clearButton.on('click', function() {
                searchInput.val('');
                clearButton.hide();
                performSearch('');
            });
        });

        function performSearch(searchTerm) {
            currentSearchTerm = searchTerm;
            console.log('Searching for:', searchTerm);
            
            // Show loading state
            $('#tableContainer').html('<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');
            
            $.ajax({
                url: '/Admin/Company/LoadTable',
                type: 'GET',
                data: { 
                    pageIndex: 1, 
                    pageSize: currentPageSize, 
                    searchTerm: searchTerm 
                },
                success: function(result) {
                    $('#tableContainer').html(result);
                    
                    // Update search results info
                    const totalCount = parseInt($('#tableContainer').attr('data-total-count')) || 0;
                    updateSearchResultsInfo(totalCount, searchTerm);
                    
                    console.log('Search completed for:', searchTerm, 'Results:', totalCount);
                },
                error: function(xhr, status, error) {
                    console.error('Search error:', error);
                    $('#tableContainer').html(
                        '<div class="alert alert-danger">' +
                        '<i class="bi bi-exclamation-triangle"></i> ' +
                        'Error searching. Please try again.' +
                        '</div>'
                    );
                }
            });
        }

        function updateSearchResultsInfo(totalCount, searchTerm) {
            const resultsSpan = $('#searchResults');
            if (totalCount > 0) {
                if (searchTerm && searchTerm.trim().length > 0) {
                    resultsSpan.html(
                        `<span class="search-results-count">${totalCount}</span> ` +
                        `compan${totalCount === 1 ? 'y' : 'ies'} found for "<strong>${searchTerm}</strong>"`
                    );
                } else {
                    resultsSpan.html(
                        `<span class="search-results-count">${totalCount}</span> ` +
                        `compan${totalCount === 1 ? 'y' : 'ies'} found`
                    );
                }
            } else {
                if (searchTerm && searchTerm.trim().length > 0) {
                    resultsSpan.html(`companies found for "<strong>${searchTerm}</strong>"`);
                } else {
                    resultsSpan.html('No companies found');
                }
            }
        }

        // Handle pagination clicks with improved error handling and logging
        $(document).on('click', '.page-btn', function(e) {
            e.preventDefault();
            
            if ($(this).closest('.disabled').length) {
                console.log('Pagination button is disabled, ignoring click');
                return false;
            }
            
            const pageIndex = $(this).data('page');
            console.log('Company pagination clicked: Page', pageIndex);
            
            // Show loading state
            $('#tableContainer').html('<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');
            
            $.ajax({
                url: '/Admin/Company/LoadTable',
                type: 'GET',
                data: { 
                    pageIndex: pageIndex, 
                    pageSize: currentPageSize,
                    searchTerm: currentSearchTerm 
                },
                success: function(result) {
                    $('#tableContainer').html(result);
                    console.log('Successfully loaded Company page', pageIndex);
                    
                    // Scroll to table top for better UX
                    $('#tableContainer')[0].scrollIntoView({ behavior: 'smooth' });
                },
                error: function(xhr, status, error) {
                    console.error('Error loading Company table:', error);
                    $('#tableContainer').html(
                        '<div class="alert alert-danger">' +
                        '<i class="bi bi-exclamation-triangle"></i> ' +
                        'Error loading data. Please refresh the page and try again.' +
                        '</div>'
                    );
                }
            });
        });

        // Handle delete forms with AJAX
        $(document).on('submit', '.delete-form', function(e) {
            e.preventDefault();
            
            const confirmMessage = $(this).data('confirm');
            if (!confirm(confirmMessage)) {
                return false;
            }
            
            const form = $(this);
            const formData = new FormData(this);
            
            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest' // Mark as AJAX request
                },
                success: function(result) {
                    if (result.success) {
                        // Show success message
                        $('.alert').remove();
                        $('<div class="alert alert-success alert-dismissible fade show mt-3" role="alert">' +
                          '<i class="bi bi-check-circle-fill"></i> ' + result.message +
                          '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                          '</div>').insertAfter('.asset-header-row');
                        
                        // Reload table via AJAX (stay on same page)
                        const currentPage = $('.pagination .page-item.active .page-btn').data('page') || 1;
                        $.ajax({
                            url: '/Admin/Company/LoadTable',
                            type: 'GET',
                            data: { 
                                pageIndex: currentPage, 
                                pageSize: currentPageSize,
                                searchTerm: currentSearchTerm 
                            },
                            success: function(data) {
                                $('#tableContainer').html(data);
                                console.log('Company table reloaded after delete');
                                
                                // Update search results info
                                const totalCount = parseInt($('#tableContainer').attr('data-total-count')) || 0;
                                updateSearchResultsInfo(totalCount, currentSearchTerm);
                            },
                            error: function() {
                                // Fallback to page 1 if current page fails
                                $.get('/Admin/Company/LoadTable?pageIndex=1&pageSize=' + currentPageSize + '&searchTerm=' + encodeURIComponent(currentSearchTerm), function(data) {
                                    $('#tableContainer').html(data);
                                    const totalCount = parseInt($('#tableContainer').attr('data-total-count')) || 0;
                                    updateSearchResultsInfo(totalCount, currentSearchTerm);
                                });
                            }
                        });
                    } else {
                        // Check if it requires confirmation for force delete
                        if (result.requiresConfirmation) {
                            showEnhancedCompanyDeleteDialog(result);
                        } else {
                            // Show regular warning message
                            $('.alert').remove();
                            $('<div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">' +
                              '<i class="bi bi-exclamation-triangle-fill"></i> ' + result.message +
                              '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                              '</div>').insertAfter('.asset-header-row');
                        }
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error deleting company:', error);
                    $('.alert').remove();
                    $('<div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">' +
                      '<i class="bi bi-exclamation-triangle-fill"></i> Error deleting company. Please try again.' +
                      '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                      '</div>').insertAfter('.asset-header-row');
                }
            });
        });

        // Enhanced delete dialog with detailed information for companies
        function showEnhancedCompanyDeleteDialog(result) {
            const relatedData = result.relatedData || {};
            
            let detailsHtml = `
                <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin: 15px 0;">
                    <h6><i class="bi bi-info-circle text-primary"></i> Related Data Details:</h6>
                    <ul style="margin: 10px 0; padding-left: 20px;">
                        <li><strong>Employees:</strong> ${relatedData.employeeCount || 0}</li>
                        <li><strong>Total Inspections:</strong> ${relatedData.totalInspections || 0}</li>
                        <li><strong>Last Inspection:</strong> ${relatedData.lastInspectionDate || 'N/A'}</li>
                        <li><strong>Affected Assets:</strong> ${relatedData.totalAffectedAssets || 0} asset(s)</li>
                    </ul>
                    
                    ${relatedData.employeeNames && relatedData.employeeNames.length > 0 ? 
                        `<div style="margin-top: 10px;">
                            <strong>Employees:</strong><br>
                            ${relatedData.employeeNames.map(emp => `• ${emp}`).join('<br>')}
                            ${relatedData.totalEmployees > relatedData.employeeNames.length ? 
                                `<br>... and ${relatedData.totalEmployees - relatedData.employeeNames.length} more` : ''
                            }
                        </div>` : ''
                    }

                    ${relatedData.affectedAssets && relatedData.affectedAssets.length > 0 ? 
                        `<div style="margin-top: 10px;">
                            <strong>Affected Assets:</strong><br>
                            ${relatedData.affectedAssets.map(asset => `• ${asset}`).join('<br>')}
                            ${relatedData.totalAffectedAssets > relatedData.affectedAssets.length ? 
                                `<br>... and ${relatedData.totalAffectedAssets - relatedData.affectedAssets.length} more` : ''
                            }
                        </div>` : ''
                    }
                </div>
                
                <div style="background: #fff3cd; padding: 15px; border-radius: 8px; border-left: 4px solid #ffc107;">
                    <h6><i class="bi bi-exclamation-triangle text-warning"></i> You have two options:</h6>
                    <div style="margin: 10px 0;">
                        <button type="button" class="btn btn-info btn-sm me-2" onclick="showManageCompanyRelatedData('${result.companyId}', '${result.companyName}')">
                            <i class="bi bi-list-check"></i> Show me what to delete first
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmCompanyForceDelete('${result.companyId}', '${result.companyName}')">
                            <i class="bi bi-trash"></i> Force delete everything
                        </button>
                    </div>
                </div>
            `;
            
            // Create modal dialog
            const modalHtml = `
                <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header bg-warning">
                                <h5 class="modal-title">
                                    <i class="bi bi-exclamation-triangle"></i> 
                                    Cannot Delete Company: ${result.companyName}
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>${result.message}</p>
                                ${detailsHtml}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            // Remove existing modal and add new one
            $('#deleteModal').remove();
            $('body').append(modalHtml);
            $('#deleteModal').modal('show');
        }

        // Show what needs to be managed first for companies
        function showManageCompanyRelatedData(companyId, companyName) {
            $('#deleteModal').modal('hide');
            
            const managementOptionsHtml = `
                <div class="modal fade" id="manageModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-info">
                                <h5 class="modal-title">
                                    <i class="bi bi-list-check"></i> 
                                    Manage Related Data for: ${companyName}
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>You need to manage the following before deleting this company:</p>
                                <div class="list-group">
                                    <a href="/Admin/Employee?companyId=${companyId}" class="list-group-item list-group-item-action">
                                        <i class="bi bi-people"></i> 
                                        <strong>Manage Employees</strong>
                                        <small class="d-block text-muted">Reassign or delete employees in this company first</small>
                                    </a>
                                    <a href="/Admin/AssetInspection?companyId=${companyId}" class="list-group-item list-group-item-action">
                                        <i class="bi bi-clipboard-check"></i> 
                                        <strong>Manage Asset Inspections</strong>
                                        <small class="d-block text-muted">View inspections performed by company employees</small>
                                    </a>
                                    <a href="/Admin/Asset?companyId=${companyId}" class="list-group-item list-group-item-action">
                                        <i class="bi bi-box"></i> 
                                        <strong>Manage Company Assets</strong>
                                        <small class="d-block text-muted">Reassign assets owned by this company</small>
                                    </a>
                                    <div class="list-group-item">
                                        <i class="bi bi-info-circle text-info"></i> 
                                        <strong>Alternative: Force Delete</strong>
                                        <small class="d-block text-muted">Or you can force delete to remove all related data automatically</small>
                                        <button type="button" class="btn btn-danger btn-sm mt-2" onclick="confirmCompanyForceDelete('${companyId}', '${companyName}')">
                                            <i class="bi bi-trash"></i> Force Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            $('#manageModal').remove();
            $('body').append(managementOptionsHtml);
            $('#manageModal').modal('show');
        }

        // Confirm force delete for companies
        function confirmCompanyForceDelete(companyId, companyName) {
            $('.modal').modal('hide');
            
            const forceDeleteConfirm = confirm(
                `FINAL WARNING: This will permanently delete:\n\n` +
                `• Company: ${companyName}\n` +
                `• All employees in this company\n` +
                `• All inspection records performed by these employees\n` +
                `• All associated inspection data\n\n` +
                `This action CANNOT be undone!\n\n` +
                `Do you want to proceed?`
            );
            
            if (forceDeleteConfirm) {
                // Perform force delete
                $.ajax({
                    url: '/Admin/Company/ForceDelete',
                    type: 'POST',
                    data: { 
                        id: companyId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(forceResult) {
                        if (forceResult.success) {
                            // Show success message
                            $('.alert').remove();
                            $('<div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">' +
                              '<i class="bi bi-exclamation-triangle-fill"></i> ' + forceResult.message +
                              '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                              '</div>').insertAfter('.asset-header-row');
                            
                            // Reload table
                            const currentPage = $('.pagination .page-item.active .page-btn').data('page') || 1;
                            $.ajax({
                                url: '/Admin/Company/LoadTable',
                                type: 'GET',
                                data: { 
                                    pageIndex: currentPage, 
                                    pageSize: currentPageSize,
                                    searchTerm: currentSearchTerm 
                                },
                                success: function(data) {
                                    $('#tableContainer').html(data);
                                    const totalCount = parseInt($('#tableContainer').attr('data-total-count')) || 0;
                                    updateSearchResultsInfo(totalCount, currentSearchTerm);
                                },
                                error: function() {
                                    $.get('/Admin/Company/LoadTable?pageIndex=1&pageSize=' + currentPageSize + '&searchTerm=' + encodeURIComponent(currentSearchTerm), function(data) {
                                        $('#tableContainer').html(data);
                                        const totalCount = parseInt($('#tableContainer').attr('data-total-count')) || 0;
                                        updateSearchResultsInfo(totalCount, currentSearchTerm);
                                    });
                                }
                            });
                        } else {
                            $('.alert').remove();
                            $('<div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">' +
                              '<i class="bi bi-exclamation-triangle-fill"></i> ' + forceResult.message +
                              '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                              '</div>').insertAfter('.asset-header-row');
                        }
                    },
                    error: function() {
                        $('.alert').remove();
                        $('<div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">' +
                          '<i class="bi bi-exclamation-triangle-fill"></i> Error performing force delete. Please try again.' +
                          '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                          '</div>').insertAfter('.asset-header-row');
                    }
                });
            }
        }

        // Make functions globally available
        window.showManageCompanyRelatedData = showManageCompanyRelatedData;
        window.confirmCompanyForceDelete = confirmCompanyForceDelete;

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Company search and pagination system initialized');
            console.log('Current search term:', currentSearchTerm);
            console.log('Current page size:', currentPageSize);
            
            // Initialize search state
            if (currentSearchTerm) {
                $('#searchInput').val(currentSearchTerm);
                $('#clearSearch').show();
            }
            
            // Focus search input on page load for better UX
            $('#searchInput').focus();
        });
    </script>
}

<style>
