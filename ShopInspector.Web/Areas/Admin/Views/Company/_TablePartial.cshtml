@using ShopInspector.Core.Entities
@using ShopInspector.Web.Areas.Admin.Models
@model PaginatedList<CompanyListViewModel>

<div class="asset-table-wrapper">
    <!-- Desktop Table View -->
    <div class="d-none d-md-block">
        <table class="table table-hover table-compact asset-table">
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>Admin Email</th>
                    <th>Contact Person</th>
                    <th>Employees</th>
                    <th class="text-center">Status</th>
                    <th class="asset-col-actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.CompanyName</div>
                                <small class="text-muted">Created: @item.CreatedOn.ToString("MMM dd, yyyy")</small>
                            </td>
                            <td class="text-truncate" style="max-width: 200px;" title="@item.CompanyAdminEmail">
                                @item.CompanyAdminEmail
                            </td>
                            <td class="text-truncate" style="max-width: 150px;" title="@item.CompanyContactName">
                                @item.CompanyContactName
                            </td>
                            <td class="text-center">
                                @if (item.EmployeesCount > 0)
                                {
                                    <span class="badge bg-info">@item.EmployeesCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Active)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td class="asset-col-actions">
                                <div class="asset-action-group">
                                    <a asp-area="Admin" asp-controller="Company" asp-action="Edit" asp-route-id="@item.CompanyID" 
                                       class="btn btn-action btn-outline-primary" title="Edit Company">
                                        <i class="bi bi-pencil-square"></i> <span class="txt">Edit</span>
                                    </a>
                                    <form asp-area="Admin"
                                          asp-controller="Company"
                                          asp-action="Delete"
                                          asp-route-id="@item.CompanyID"
                                          method="post"
                                          class="m-0 p-0 d-inline delete-form"
                                          data-confirm="Are you sure you want to delete this company? This action cannot be undone if the company has no employees.">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-action btn-outline-danger" title="Delete Company">
                                            <i class="bi bi-trash"></i> <span class="txt">Delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 2rem; opacity: 0.5;"></i>
                            <br>No companies found
                            <br><a asp-area="Admin" asp-controller="Company" asp-action="Create">Create your first company</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile Card View -->
    <div class="d-md-none">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="asset-card mb-3">
                    <div class="asset-card-header">
                        <div class="asset-card-title">
                            <h6 class="mb-1 fw-bold text-primary">@item.CompanyName</h6>
                            <div class="asset-card-meta">
                                @if (item.Active)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Inactive</span>
                                }
                                @if (item.EmployeesCount > 0)
                                {
                                    <span class="badge bg-info ms-2">@item.EmployeesCount employees</span>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="asset-card-body">
                        <div class="asset-card-details">
                            <div class="detail-row">
                                <span class="detail-label"><i class="bi bi-envelope text-muted me-1"></i>Admin Email:</span>
                                <span class="detail-value">@(item.CompanyAdminEmail ?? "N/A")</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label"><i class="bi bi-person-badge text-muted me-1"></i>Contact:</span>
                                <span class="detail-value">@(item.CompanyContactName ?? "N/A")</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label"><i class="bi bi-calendar-plus text-muted me-1"></i>Created:</span>
                                <span class="detail-value">@item.CreatedOn.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="asset-card-actions">
                        <div class="mobile-action-grid">
                            <a asp-area="Admin" asp-controller="Company" asp-action="Edit" asp-route-id="@item.CompanyID"
                               class="btn btn-outline-primary btn-sm mobile-action-btn">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-area="Admin"
                                  asp-controller="Company"
                                  asp-action="Delete"
                                  asp-route-id="@item.CompanyID"
                                  method="post"
                                  class="mobile-action-form delete-form"
                                  data-confirm="Are you sure you want to delete this company? This action cannot be undone if the company has no employees.">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm mobile-action-btn w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.5;"></i>
                <div class="mt-3">
                    <h6>No companies found</h6>
                    <a asp-area="Admin" asp-controller="Company" asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create your first company
                    </a>
                </div>
            </div>
        }
        
        <!-- Mobile info notice -->
        <div class="mobile-info-notice mt-3 p-3 bg-light border rounded">
            <small class="text-muted">
                <i class="bi bi-info-circle me-1"></i>
                All company information is displayed in card format for better mobile viewing.
            </small>
        </div>
    </div>

    @await Html.PartialAsync("_Pagination", Model)
</div>