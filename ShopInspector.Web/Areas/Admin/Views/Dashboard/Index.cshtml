@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row g-4">

        <div class="col-md-4">
            <a data-dashboard-link="true" class="text-decoration-none" href="/Admin/Company/Index">
                <div class="card shadow-sm border-0 dashboard-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-building fs-1 text-primary"></i>
                        <h5 class="mt-3">Companies</h5>
                        <p class="text-muted small">Manage all companies</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a data-dashboard-link="true" class="text-decoration-none" href="/Admin/Employee/Index">
                <div class="card shadow-sm border-0 dashboard-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-people fs-1 text-success"></i>
                        <h5 class="mt-3">Employees</h5>
                        <p class="text-muted small">Add or manage employees</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a data-dashboard-link="true" class="text-decoration-none" href="/Admin/AssetType/Index">
                <div class="card shadow-sm border-0 dashboard-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-tags fs-1 text-info"></i>
                        <h5 class="mt-3">Asset Types</h5>
                        <p class="text-muted small">Define asset categories</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a data-dashboard-link="true" class="text-decoration-none" href="/Admin/Asset/Index">
                <div class="card shadow-sm border-0 dashboard-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-hammer fs-1 text-warning"></i>
                        <h5 class="mt-3">Assets</h5>
                        <p class="text-muted small">Manage assets and QR codes</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a data-dashboard-link="true" class="text-decoration-none" href="/PublicInspection/Assets">
                <div class="card shadow-sm border-0 dashboard-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-list-check fs-1 text-danger"></i>
                        <h5 class="mt-3">Inspection Checklists</h5>
                        <p class="text-muted small">Create inspection items</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a data-dashboard-link="true" class="text-decoration-none" href="/Admin/InspectionFrequency/Index">
                <div class="card shadow-sm border-0 dashboard-card">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-clock-history fs-1 text-primary"></i>
                        <h5 class="mt-3">Inspection Frequency</h5>
                        <p class="text-muted small">Weekly / Monthly / Yearly</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a data-dashboard-link="true" class="text-decoration-none" href="/Admin/AssetCheckList/Index">
                <div class="card shadow-sm border-0 dashboard-card" style="cursor:pointer;">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-diagram-3 fs-1 text-secondary"></i>
                        <h5 class="mt-3">Asset → Checklist Mapping</h5>
                        <p class="text-muted small">Assign checklist items to assets</p>
                    </div>
                </div>
            </a>
        </div>

    </div>

</div>

<style>
    .dashboard-card:hover {
        transform: translateY(-5px);
        transition: 0.2s ease-in-out;
        box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,0.1);
    }
</style>