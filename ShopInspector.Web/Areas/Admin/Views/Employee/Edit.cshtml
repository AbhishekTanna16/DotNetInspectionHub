@model ShopInspector.Web.Areas.Admin.Models.EmployeeEditViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Employee";
}

<div class="admin-page-container">
    <h2 class="mb-3">Edit Employee</h2>

    <div class="admin-card">
        <div class="admin-container">
            @* Display any error messages from form submission *@
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form id="editEmployeeForm" asp-area="Admin" asp-controller="Employee" asp-action="Edit" method="post" novalidate>
                @Html.AntiForgeryToken() 
                <input type="hidden" asp-for="EmployeeID" />

                <div class="form-grid">
                    <div class="mb-3">
                        <label asp-for="EmployeeName" class="form-label">
                            Employee Name 
                            <span class="text-danger required-indicator">*</span>
                        </label>
                        <input asp-for="EmployeeName" class="form-control" placeholder="Enter employee name" />
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                        <small class="form-text text-muted">Enter the full name of the employee</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CompanyID" class="form-label">
                            Company 
                            <span class="text-danger required-indicator">*</span>
                        </label>
                        <select asp-for="CompanyID" asp-items="ViewBag.Companies" class="form-select">
                            <option value="">-- Select Company --</option>
                        </select>
                        <span asp-validation-for="CompanyID" class="text-danger"></span>
                        <small class="form-text text-muted">Select the company this employee belongs to</small>
                    </div>

                    <div class="mb-3 full-width">
                        <div>
                            <label class="form-check-label">
                                @(Model.Active ? "Active" : "Inactive")
                            </label>
                            <input class="toggle-switch-input" type="checkbox" asp-for="Active" />
                            <label for="Active" class="toggle-switch-slider"></label>
                        </div>
                    </div>
                </div>

                <div class="btn-wrap mt-3">
                    <button type="submit" 
                            id="submitBtn" 
                            class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Update Employee
                    </button>
                    <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Enhanced validation for Employee Edit form
            $("#editEmployeeForm").validate({
                rules: {
                    EmployeeName: {
                        required: true,
                        minlength: 2,
                        maxlength: 100
                    },
                    CompanyID: {
                        required: true
                    }
                },
                messages: {
                    EmployeeName: {
                        required: "Employee Name is required",
                        minlength: "Employee Name must be at least 2 characters",
                        maxlength: "Employee Name cannot exceed 100 characters"
                    },
                    CompanyID: {
                        required: "Please select a Company"
                    }
                },
                errorClass: "text-danger",
                errorElement: "span",
                highlight: function(element) {
                    $(element).addClass("is-invalid");
                },
                unhighlight: function(element) {
                    $(element).removeClass("is-invalid");
                },
                submitHandler: function(form) {
                    const submitBtn = $("#submitBtn");
                    const originalText = submitBtn.html();
                    
                    // Show loading state
                    submitBtn.prop('disabled', true)
                             .html('<i class="bi bi-hourglass-split"></i> Updating...');

                    // Submit the form
                    form.submit();
                }
            });

            // Add helpful input formatting for employee name
            $("#EmployeeName").on('input', function() {
                let value = $(this).val();
                // Auto-capitalize first letter of each word
                value = value.replace(/\b\w/g, function(char) {
                    return char.toUpperCase();
                });
                $(this).val(value);
            });
        });
    </script>
}
