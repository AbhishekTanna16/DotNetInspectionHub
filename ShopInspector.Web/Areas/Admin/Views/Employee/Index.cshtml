
@model IEnumerable<ShopInspector.Core.Entities.Employee>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Employees";
}

<div class="admin-container">
    <div class="admin-toolbar">
        <h2 class="mb-0">Employees</h2>
        <div class="d-flex justify-content-end mb-4">
            <a asp-area="Admin" asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add Employee</a>
        </div>
    </div>

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover table-compact mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>                        
                        <th data-hide-md>Company</th>
                        <th class="text-center">Active</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var e in Model)
                        {
                            <tr>
                                <td class="text-truncate-2">@e.EmployeeName</td>
                                <td data-hide-md class="text-truncate-2">@e.Company?.CompanyName</td>
                                <td class="text-center">
                                    @if (e.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-area="Admin" asp-controller="Employee" asp-action="Edit" asp-route-id="@e.EmployeeID" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                    <button type="button" data-action="delete" data-url="@Url.Action("Delete", "Employee", new { area = "Admin", id = e.EmployeeID })" class="btn btn-sm btn-outline-danger">Delete</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
