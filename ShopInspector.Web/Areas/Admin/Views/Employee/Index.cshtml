@model IEnumerable<ShopInspector.Core.Entities.Employee>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Employees";
}

<div class="asset-page">
    <!-- Header row: title left, add button right (same line) -->
    <div class="asset-header-row">
        <h2 class="asset-title">Employees</h2>
        <a asp-area="Admin"
           asp-controller="Employee"
           asp-action="Create"
           class="btn btn-primary asset-add-btn"
           title="Add Employee">
            <i class="bi bi-plus-circle"></i> <span>Add Employee</span>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="asset-table-wrapper mt-3">
        <table class="table table-hover table-compact asset-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th data-hide-md>Company</th>
                    <th class="text-center">Active</th>
                    <th class="asset-col-actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var e in Model)
                    {
                        <tr>
                            <td class="text-truncate-2">@e.EmployeeName</td>
                            <td data-hide-md class="text-truncate-2">@e.Company?.CompanyName</td>
                            <td class="text-center">
                                @if (e.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="asset-col-actions">
                                <div class="asset-action-group">
                                    <a asp-area="Admin" asp-controller="Employee" asp-action="Edit" asp-route-id="@e.EmployeeID"
                                       class="btn btn-action btn-outline-primary" title="Edit Employee">
                                        <i class="bi bi-pencil-square"></i> <span class="txt">Edit</span>
                                    </a>
                                    <button type="button" 
                                            data-action="delete" 
                                            data-url="@Url.Action("Delete", "Employee", new { area = "Admin", id = e.EmployeeID })" 
                                            class="btn btn-action btn-outline-danger"
                                            title="Delete Employee">
                                        <i class="bi bi-trash"></i> <span class="txt">Delete</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">
                            <i class="bi bi-inbox"></i><br />
                            No employees found. <a asp-area="Admin" asp-controller="Employee" asp-action="Create">Create your first employee</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
