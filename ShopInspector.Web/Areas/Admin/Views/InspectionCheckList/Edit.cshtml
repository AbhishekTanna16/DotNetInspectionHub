@model ShopInspector.Core.Entities.InspectionCheckList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Inspection Checklist";
}

<div class="admin-page-container">
    <h2 class="mb-3">Edit Inspection Checklist</h2>

    <div class="admin-card">
        <div class="admin-container">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form id="editInspectionCheckListForm" asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Edit" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="InspectionCheckListID" />

                <div class="form-grid">
                    <div class="mb-3 full-width">
                        <label asp-for="InspectionCheckListTitle" class="form-label">
                            CheckList Title 
                            <span class="text-danger required-indicator">*</span>
                        </label>
                        <input asp-for="InspectionCheckListTitle" class="form-control" placeholder="Enter checklist title" />
                        <span asp-validation-for="InspectionCheckListTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3 full-width">
                        <label asp-for="InspectionCheckListName" class="form-label">
                            CheckList Name 
                            <span class="text-danger required-indicator">*</span>
                        </label>
                        <input asp-for="InspectionCheckListName" class="form-control" placeholder="Enter checklist name" />
                        <span asp-validation-for="InspectionCheckListName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 full-width">
                        <label asp-for="InspectionCheckListDescription" class="form-label">CheckList Description</label>
                        <textarea asp-for="InspectionCheckListDescription" class="form-control" rows="4" placeholder="Enter checklist description (optional)"></textarea>
                        <span asp-validation-for="InspectionCheckListDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3 full-width">
                        <div class="form-check">
                            <input asp-for="Active" class="form-check-input" />
                            <label asp-for="Active" class="form-check-label">Is Active</label>
                        </div>
                    </div>
                </div>

                <div class="btn-wrap mt-2">
                    <button type="submit" id="submitBtn" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                    <a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Enhanced validation for InspectionCheckList Edit form
            $("#editInspectionCheckListForm").validate({
                rules: {
                    InspectionCheckListTitle: {
                        required: true,
                        minlength: 3,
                        maxlength: 200
                    },
                    InspectionCheckListName: {
                        required: true,
                        minlength: 3,
                        maxlength: 100
                    },
                    InspectionCheckListDescription: {
                        maxlength: 500
                    }
                },
                messages: {
                    InspectionCheckListTitle: {
                        required: "CheckList Title is required",
                        minlength: "Title must be at least 3 characters",
                        maxlength: "Title cannot exceed 200 characters"
                    },
                    InspectionCheckListName: {
                        required: "CheckList Name is required",
                        minlength: "Name must be at least 3 characters",
                        maxlength: "Name cannot exceed 100 characters"
                    },
                    InspectionCheckListDescription: {
                        maxlength: "Description cannot exceed 500 characters"
                    }
                },
                errorClass: "text-danger",
                errorElement: "span",
                highlight: function(element) {
                    $(element).addClass("is-invalid");
                },
                unhighlight: function(element) {
                    $(element).removeClass("is-invalid");
                },
                submitHandler: function(form) {
                    const submitBtn = $("#submitBtn");
                    const originalText = submitBtn.html();
                    
                    // Show loading state
                    submitBtn.prop('disabled', true)
                             .html('<i class="bi bi-hourglass-split"></i> Saving...');
                    
                    form.submit();
                }
            });
        });
    </script>
}
