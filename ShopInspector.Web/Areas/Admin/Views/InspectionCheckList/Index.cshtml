@model IEnumerable<ShopInspector.Core.Entities.InspectionCheckList>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Inspection Checklist";
}

<div class="asset-page">
    <!-- Header row: title left, add button right (same line) -->
    <div class="asset-header-row">
        <h2 class="asset-title">Inspection Checklists</h2>
        <a asp-area="Admin"
           asp-controller="InspectionCheckList"
           asp-action="Create"
           class="btn btn-primary asset-add-btn"
           title="Add Checklist">
            <i class="bi bi-plus-circle"></i> <span>Add Checklist</span>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="asset-table-wrapper mt-3">
        <table class="table table-hover table-compact asset-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th data-hide-sm>Name</th>
                    <th data-hide-md>Description</th>
                    <th data-hide-md>Active</th>
                    <th class="asset-col-actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-truncate-2">@item.InspectionCheckListTitle</td>
                            <td data-hide-sm class="text-truncate-2">@item.InspectionCheckListName</td>
                            <td data-hide-md class="text-truncate-2">@item.InspectionCheckListDescription</td>
                            <td data-hide-md class="text-center">
                                @if (item.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="asset-col-actions">
                                <div class="asset-action-group">
                                    <a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Edit" asp-route-id="@item.InspectionCheckListID" 
                                       class="btn btn-action btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil-square"></i> <span class="txt">Edit</span>
                                    </a>
                                    <form asp-area="Admin"
                                          asp-controller="InspectionCheckList"
                                          asp-action="Delete"
                                          asp-route-id="@item.InspectionCheckListID"
                                          method="post"
                                          class="m-0 p-0 d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this checklist?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-action btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i> <span class="txt">Delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-inbox"></i><br />
                            No inspection checklists found. <a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Create">Create your first checklist</a>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-actions.js"></script>
}
