
@model IEnumerable<ShopInspector.Core.Entities.InspectionCheckList>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Inspection Checklist";
}

<div class="admin-container">
    <div class="admin-toolbar">
        <h2 class="mb-0">Inspection Checklists</h2>
        <div class="d-flex justify-content-end mb-4">
            <a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Create" class="btn btn-primary">Add Checklist</a>
        </div>
    </div>

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover table-compact mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th data-hide-sm>Name</th>
                        <th data-hide-md>Description</th>
                        <th class="text-center">Active</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-truncate-2">@item.InspectionCheckListTitle</td>
                                <td data-hide-sm class="text-truncate-2">@item.InspectionCheckListName</td>
                                <td data-hide-md class="text-truncate-2">@item.InspectionCheckListDescription</td>
                                <td class="text-center">
                                    @if (item.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Edit" asp-route-id="@item.InspectionCheckListID" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                    <button type="button" data-action="delete" data-url="@Url.Action("Delete", "InspectionCheckList", new { area = "Admin", id = item.InspectionCheckListID })" class="btn btn-sm btn-outline-danger">Delete</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
