@using ShopInspector.Core.Entities
@model PaginatedList<ShopInspector.Core.Entities.InspectionCheckList>

<div class="asset-table-wrapper" data-total-count="@Model.TotalCount">
    <!-- Desktop Table View -->
    <div class="d-none d-md-block">
        <table class="table table-hover table-compact asset-table">
            <thead>
                <tr>
                    <th>Checklist Title</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th class="asset-col-actions text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.InspectionCheckListTitle</div>
                            </td>
                            <td class="text-truncate" style="max-width: 200px;" title="@item.InspectionCheckListName">
                                @item.InspectionCheckListName
                            </td>
                            <td class="text-truncate" style="max-width: 250px;" title="@item.InspectionCheckListDescription">
                                @item.InspectionCheckListDescription
                            </td>
                            <td class="text-center">
                                @if (item.Active)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td class="asset-col-actions">
                                <div class="asset-action-group">
                                    <a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Edit" asp-route-id="@item.InspectionCheckListID" 
                                       class="btn btn-action btn-outline-primary" title="Edit Inspection CheckList">
                                        <i class="bi bi-pencil-square"></i> <span class="txt">Edit</span>
                                    </a>
                                    <form asp-area="Admin"
                                          asp-controller="InspectionCheckList"
                                          asp-action="Delete"
                                          asp-route-id="@item.InspectionCheckListID"
                                          method="post"
                                          class="m-0 p-0 d-inline delete-form"
                                          data-confirm="Are you sure you want to delete this inspection checklist?">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-action btn-outline-danger" title="Delete Inspection CheckList">
                                            <i class="bi bi-trash"></i> <span class="txt">Delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 2rem; opacity: 0.5;"></i>
                            <br>No inspection checklists found
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                            {
                                <br><small>Try adjusting your search terms or <a href="javascript:void(0)" onclick="$('#searchInput').val('').trigger('input')">clear search</a></small>
                            }
                            else
                            {
                                <br><a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Create">Create your first inspection checklist</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile Card View -->
    <div class="d-md-none">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="asset-card mb-3">
                    <div class="asset-card-header">
                        <div class="asset-card-title">
                            <h6 class="mb-1 fw-bold text-primary">@item.InspectionCheckListTitle</h6>
                            <div class="asset-card-meta">
                                @if (item.Active)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Inactive</span>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="asset-card-body">
                        <div class="asset-card-details">
                            <div class="detail-row">
                                <span class="detail-label"><i class="bi bi-tag text-muted me-1"></i>Name:</span>
                                <span class="detail-value">@(item.InspectionCheckListName ?? "N/A")</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label"><i class="bi bi-file-text text-muted me-1"></i>Description:</span>
                                <span class="detail-value">
                                    @if (!string.IsNullOrEmpty(item.InspectionCheckListDescription))
                                    {
                                        if (item.InspectionCheckListDescription.Length > 100)
                                        {
                                            <span title="@item.InspectionCheckListDescription">
                                                @item.InspectionCheckListDescription.Substring(0, 100)...
                                            </span>
                                        }
                                        else
                                        {
                                            @item.InspectionCheckListDescription
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="asset-card-actions">
                        <div class="mobile-action-grid">
                            <a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Edit" asp-route-id="@item.InspectionCheckListID"
                               class="btn btn-outline-primary btn-sm mobile-action-btn">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-area="Admin"
                                  asp-controller="InspectionCheckList"
                                  asp-action="Delete"
                                  asp-route-id="@item.InspectionCheckListID"
                                  method="post"
                                  class="mobile-action-form delete-form"
                                  data-confirm="Are you sure you want to delete this inspection checklist?">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm mobile-action-btn w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.5;"></i>
                <div class="mt-3">
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                    {
                        <h6>No checklists found for your search</h6>
                        <p>Try adjusting your search terms or <a href="javascript:void(0)" onclick="$('#searchInput').val('').trigger('input')" class="btn btn-outline-secondary btn-sm mt-2">Clear Search</a></p>
                    }
                    else
                    {
                        <h6>No inspection checklists found</h6>
                        <a asp-area="Admin" asp-controller="InspectionCheckList" asp-action="Create" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle"></i> Create your first inspection checklist
                        </a>
                    }
                </div>
            </div>
        }
        
        <!-- Mobile info notice -->
        <div class="mobile-info-notice mt-3 p-3 bg-light border rounded">
            <small class="text-muted">
                <i class="bi bi-info-circle me-1"></i>
                All inspection checklist information is displayed in card format for better mobile viewing.
            </small>
        </div>
    </div>

    @await Html.PartialAsync("_Pagination", Model)
</div>