@model ShopInspector.Web.Areas.Admin.Models.InspectionFrequencyCreateViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add Inspection Frequency";
}

<div class="admin-page-container">
    <h2 class="mb-3">Add Inspection Frequency</h2>

    <div class="admin-card">
        <div class="admin-container">
            @* Display any error messages from form submission *@
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form id="createInspectionFrequencyForm" asp-area="Admin" asp-controller="InspectionFrequency" asp-action="Create" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="form-grid">
                    <div class="mb-3 full-width">
                        <label asp-for="FrequencyName" class="form-label">
                            Frequency Name 
                            <span class="text-danger required-indicator">*</span>
                        </label>
                        <input asp-for="FrequencyName" class="form-control" placeholder="Enter frequency name (e.g., Daily, Weekly, Monthly)" />
                        <span asp-validation-for="FrequencyName" class="text-danger"></span>
                        <small class="form-text text-muted">Examples: Daily, Weekly, Monthly, Quarterly, Annual</small>
                    </div>
                </div>

                <div class="btn-wrap mt-3">
                    <button type="submit" 
                            id="submitBtn" 
                            class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save Frequency
                    </button>
                    <a asp-area="Admin" asp-controller="InspectionFrequency" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Enhanced validation for InspectionFrequency Create form
            $("#createInspectionFrequencyForm").validate({
                rules: {
                    FrequencyName: {
                        required: true,
                        minlength: 2,
                        maxlength: 100
                    }
                },
                messages: {
                    FrequencyName: {
                        required: "Frequency Name is required",
                        minlength: "Frequency Name must be at least 2 characters",
                        maxlength: "Frequency Name cannot exceed 100 characters"
                    }
                },
                errorClass: "text-danger",
                errorElement: "span",
                highlight: function(element) {
                    $(element).addClass("is-invalid");
                },
                unhighlight: function(element) {
                    $(element).removeClass("is-invalid");
                },
                submitHandler: function(form) {
                    const submitBtn = $("#submitBtn");
                    const originalText = submitBtn.html();
                    
                    // Show loading state
                    submitBtn.prop('disabled', true)
                             .html('<i class="bi bi-hourglass-split"></i> Creating...');

                    // Submit the form
                    form.submit();
                }
            });

            // Add helpful input formatting for frequency name
            $("#FrequencyName").on('input', function() {
                let value = $(this).val();
                // Auto-capitalize first letter of each word
                value = value.replace(/\b\w/g, function(char) {
                    return char.toUpperCase();
                });
                $(this).val(value);
            });
        });
    </script>
}

