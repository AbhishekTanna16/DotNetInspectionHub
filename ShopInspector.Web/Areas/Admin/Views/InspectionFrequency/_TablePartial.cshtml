@using ShopInspector.Core.Entities
@using ShopInspector.Web.Areas.Admin.Models
@model PaginatedList<InspectionFrequencyListViewModel>

<div class="asset-table-wrapper" data-total-count="@Model.TotalCount">
    <!-- Desktop Table View -->
    <div class="d-none d-md-block">
        <table class="table table-hover table-compact asset-table">
            <thead>
                <tr>
                    <th>Frequency Name</th>
                    <th class="text-center" style="width: 120px;">Inspections</th>
                    <th class="asset-col-actions text-end" style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var f in Model)
                    {
                        <tr data-id="@f.InspectionFrequencyID">
                            <td>
                                <div class="fw-bold">@f.FrequencyName</div>
                            </td>
                            <td class="text-center" style="width: 120px;">
                                @if (f.InspectionsCount > 0)
                                {
                                    <span class="badge bg-info">@f.InspectionsCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td class="asset-col-actions" style="width: 200px;">
                                <div class="asset-action-group">
                                    <a asp-area="Admin" asp-controller="InspectionFrequency" asp-action="Edit" asp-route-id="@f.InspectionFrequencyID" 
                                       class="btn btn-action btn-outline-primary" title="Edit Inspection Frequency">
                                        <i class="bi bi-pencil-square"></i> <span class="txt">Edit</span>
                                    </a>
                                    <form asp-area="Admin"
                                          asp-controller="InspectionFrequency"
                                          asp-action="Delete"
                                          asp-route-id="@f.InspectionFrequencyID"
                                          method="post"
                                          class="m-0 p-0 d-inline delete-form"
                                          data-confirm="Are you sure you want to delete this inspection frequency? This action cannot be undone if it has no associated inspections.">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-action btn-outline-danger" title="Delete Inspection Frequency">
                                            <i class="bi bi-trash"></i> <span class="txt">Delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 2rem; opacity: 0.5;"></i>
                            <br>No inspection frequencies found
                            @if (!string.IsNullOrEmpty(ViewData["SearchTerm"] as string))
                            {
                                <br><small>Try adjusting your search terms or <a href="javascript:void(0)" onclick="$('#searchInput').val('').trigger('input')">clear search</a></small>
                            }
                            else
                            {
                                <br><a asp-area="Admin" asp-controller="InspectionFrequency" asp-action="Create">Create your first inspection frequency</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile Card View -->
    <div class="d-md-none">
        @if (Model != null && Model.Any())
        {
            foreach (var f in Model)
            {
                <div class="asset-card mb-3" data-id="@f.InspectionFrequencyID">
                    <div class="asset-card-header">
                        <div class="asset-card-title">
                            <h6 class="mb-1 fw-bold text-primary">@f.FrequencyName</h6>
                            <div class="asset-card-meta">
                                @if (f.InspectionsCount > 0)
                                {
                                    <span class="badge bg-info">@f.InspectionsCount inspections</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">0 inspections</span>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="asset-card-actions">
                        <div class="mobile-action-grid">
                            <a asp-area="Admin" asp-controller="InspectionFrequency" asp-action="Edit" asp-route-id="@f.InspectionFrequencyID"
                               class="btn btn-outline-primary btn-sm mobile-action-btn">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-area="Admin"
                                  asp-controller="InspectionFrequency"
                                  asp-action="Delete"
                                  asp-route-id="@f.InspectionFrequencyID"
                                  method="post"
                                  class="mobile-action-form delete-form"
                                  data-confirm="Are you sure you want to delete this inspection frequency? This action cannot be undone if it has no associated inspections.">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm mobile-action-btn w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.5;"></i>
                <div class="mt-3">
                    @if (!string.IsNullOrEmpty(ViewData["SearchTerm"] as string))
                    {
                        <h6>No inspection frequencies found for your search</h6>
                        <p>Try adjusting your search terms or <a href="javascript:void(0)" onclick="$('#searchInput').val('').trigger('input')" class="btn btn-outline-secondary btn-sm mt-2">Clear Search</a></p>
                    }
                    else
                    {
                        <h6>No inspection frequencies found</h6>
                        <a asp-area="Admin" asp-controller="InspectionFrequency" asp-action="Create" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle"></i> Create your first inspection frequency
                        </a>
                    }
                </div>
            </div>
        }
        
        <!-- Mobile info notice -->
        <div class="mobile-info-notice mt-3 p-3 bg-light border rounded">
            <small class="text-muted">
                <i class="bi bi-info-circle me-1"></i>
                All inspection frequency information is displayed in card format for better mobile viewing.
            </small>
        </div>
    </div>

    @await Html.PartialAsync("_Pagination", Model)
</div>