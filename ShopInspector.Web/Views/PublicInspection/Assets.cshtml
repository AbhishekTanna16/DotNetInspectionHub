@model IEnumerable<ShopInspector.Core.Entities.Asset>
@{
    ViewData["Title"] = "Select Asset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="viewport" content="width=device-width,initial-scale=1" />
<div class="container py-4">
    <h4 class="mb-3">Select an Asset for Inspection</h4>
    <div class="row g-3">
        @foreach (var a in Model)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <!-- Admin route (authenticated). If you want public switch link to /Inspection/Start?assetId=... -->
                <a class="text-decoration-none" href="/PublicInspection/Start?assetId=@a.AssetID">
                    <div class="card shadow-sm h-100">
                        <div class="card-body p-3 text-center">
                            <h6 class="mb-1 text-truncate" title="@a.AssetName">@a.AssetName</h6>
                            <div class="small text-muted">@a.AssetCode</div>
                            <div class="small text-muted">@a.AssetLocation</div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
<style>
    .card {
        min-height: 140px
    }</style>