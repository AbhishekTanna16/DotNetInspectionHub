@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopInspector Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body class="sidebar-layout">
    @Html.AntiForgeryToken()

    <button class="mobile-toggle d-md-none" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-brand">
            <h2>ShopInspector</h2>
        </div>

        <div class="sidebar-user-section">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <div class="user-details">
                        <div class="user-name">@User.Identity!.Name</div>
                        <div class="user-role">Administrator</div>
                    </div>
                </div>
                <form method="post" action="/Account/Logout" class="logout-form">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </button>
                </form>
            }
            else
            {
                <a class="btn-login" href="/Account/Login">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Login</span>
                </a>
            }
        </div>

        <ul class="sidebar-nav">
            <li><a href="/Admin/Dashboard" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
            <li><a href="/Admin/Asset"><i class="bi bi-box-seam"></i> Assets</a></li>
            <li><a href="/Admin/AssetType"><i class="bi bi-tags"></i> Asset Types</a></li>
            <li><a href="/Admin/InspectionCheckList"><i class="bi bi-list-check"></i> Checklists</a></li>
            <li><a href="/Admin/InspectionFrequency"><i class="bi bi-clock"></i> Frequencies</a></li>
            <li><a href="/Admin/AssetCheckList"><i class="bi bi-diagram-3"></i> Asset Mapping</a></li>
            <li><a href="/Admin/Employee"><i class="bi bi-people"></i> Employees</a></li>
            <li><a href="/Admin/Company"><i class="bi bi-building"></i> Companies</a></li>
            <li><a href="/PublicInspection/Assets"><i class="bi bi-search"></i> Public Inspection</a></li>
        </ul>

        @* <div class="newsletter-section">
            <h6>Subscribe for newsletter</h6>
            <input type="email" class="newsletter-input" placeholder="Enter Email Address" />
        </div>
 *@
        <div class="sidebar-footer">
            <div>Copyright ©2025 All rights reserved</div>
            <div>Made with <i class="bi bi-heart-fill text-danger"></i></div>
        </div>
    </div>

    <div class="main-content">
        <div class="content-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="content-body">
            @RenderBody()
        </div>
    </div>

    <!-- jQuery (required for validation) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Admin actions -->
    <script src="~/js/admin-actions.js"></script>

    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
        }
        document.addEventListener('click', function (e) {
            if (window.innerWidth <= 768) {
                const s = document.getElementById('sidebar');
                const t = document.querySelector('.mobile-toggle');
                if (!s.contains(e.target) && !t.contains(e.target)) {
                    s.classList.remove('show');
                }
            }
        });
    </script>
</body>
</html>